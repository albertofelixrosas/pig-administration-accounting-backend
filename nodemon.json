{
  "watch": [
    "src"
  ],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules",
    "dist",
    "coverage",
    ".git"
  ],
  "exec": "node -r ts-node/register -r tsconfig-paths/register src/main.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true
}